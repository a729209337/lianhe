<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.mapper.AdminMapper">
    <select id="login" parameterType="User" resultType="int">
        select count(1) from user where password=#{password} and phoneNumber=#{phoneNumber}
    </select>

    <insert id="register" parameterType="user">
        insert into user values(null,#{phoneNumber},#{password},#{name},#{address},#{appraise},#{appraiseImg})
    </insert>
</mapper>